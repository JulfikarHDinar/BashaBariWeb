@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Requests</h2>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Request
                </th>
                <th>
                    Tenant Email
                </th>
                <th>
                    Time
                </th>
                <th>
                    Comment
                </th>
                <th></th>
            </tr>
        </thead>
        @{
            if (Model != null)
            {
                foreach (var obj in Model)
                {
                <tr>
                    <td width="40%">@obj.RequestText</td>
                    <td width="40%">@obj.TenantEmail </td>
                    <td width="20%">@obj.RequestTime</td>
                    <td width="20%">@obj.CommentOnRequestText</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="OwnerViewsRequest" asp-route-Id="@obj.RequestId" asp-action="Edit" class="btn btn-primary mx-2">
                                Comment
                            </a>
                        </div>
                    </td>
                </tr>
                }
            }
        }
    </table>
</div>