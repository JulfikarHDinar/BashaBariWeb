@model IEnumerable<TBashaBari.Models.TenantRequest>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Requests</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="TenantRequest" asp-action="Create" class="btn btn-primary">
                Post New Request
            </a>
            
        </div>
    </div>

    <br/><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Request
                    </th>
                    <th>
                        Time
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.RequestText</td>
                    <td width="30%">@obj.RequestTime</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="TenantRequest" asp-route-Id="@obj.RequestId" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="TenantRequest" asp-route-Id="@obj.RequestId" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else { 
        <p>No Request Yet</p>
    }

</div>

