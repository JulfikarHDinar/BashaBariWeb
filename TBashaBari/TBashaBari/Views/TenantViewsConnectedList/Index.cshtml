<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Your Owner</h2>
        </div>
        <div class="col-6 text-right">
            @foreach (var obj in Model)
            {
                if (!(UserManager.GetUserName(User) == obj.TenantEmail))
                {
                    <p>dfjsadfsdjkfsdkljf</p>
                    if (obj.IsConfirmed == "No")
                    {
                        <p>dfjsadf111213213213213jf</p>
                        <a asp-controller="TenantViewsConnectedList" asp-action="Create" class="btn btn-primary">
                            Add Owner
                        </a>
