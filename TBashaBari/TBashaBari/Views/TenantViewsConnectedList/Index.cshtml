                    </th>
                    <th>
                        OwnerEmail
                    </th>
                    <th>
                        IsConfirmed
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    @if (@UserManager.GetUserName(User) == obj.TenantEmail)
                    {
                        <tr>
                            <td width="50%">@obj.TenantEmail</td>
                            <td width="30%">@obj.OwnerEmail</td>
                            <td width="30%">@obj.IsConfirmed</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    @*<a asp-controller="TenantViewsConnectedList" asp-route-Id="@obj.ConnectionId" asp-action="Edit" class="btn btn-primary mx-2">
                                            Edit
                                        </a>*@
                                    <a asp-controller="TenantViewsConnectedList" asp-route-Id="@obj.ConnectionId" asp-action="Delete" class="btn btn-danger mx-2">
                                        Remove
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>You are not connected to any Owner</p>
    }

</div>

