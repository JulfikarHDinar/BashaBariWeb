@using Microsoft.AspNetCore.Identity
@using System.Data.SqlClient;
@using TBashaBari.Controllers;

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    string GetUserFullName(string _Email)
    {
        //database operation to get current tenants's fullname
        DatabaseConnection ob = new DatabaseConnection();
        string FullName = ob.getUserFullName(_Email);
        return FullName;
    }
}

<head>
    <!------------------Style Part------------->
    <style type="text/css">
        h1 {
            color: darkblue;
            font-weight: bold;
        }

        .card_icon_holder1 h5 {
            color: darkblue;
            font-weight: bold;
        }

        .card_icon_holder2 h5 {
            color: darkblue;
            font-weight: bold;
        }

        .icon_holder {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .icon {
            height: 180px;
            width: auto;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: Arial;
        }

        * {
            box-sizing: border-box
        }
        /* Slideshow container */
        .slideshow-container {
            max-width: 1000px;
            position: relative;
            margin: auto;
        }
        /* Hide the images by default */
        .mySlides {
            display: none;
        }
        /* Next & previous buttons */
        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            margin-top: -22px;
            padding: 16px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }
        /* Position the "next button" to the right */
        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }
            /* On hover, add a black background color with a little bit see-through */
            .prev:hover, .next:hover {
                background-color: rgba(0,0,0,0.8);
            }
        /* Caption text */
        .text {
            color: black;
            font-size: 25px;
            padding: 8px 12px;
            position: center;
            bottom: 8px;
            width: 100%;
            text-align: center;
        }
        /* Number text (1/3 etc) */
        .numbertext {
            color: #f2f2f2;
            font-size: 12px;
            padding: 8px 12px;
            position: absolute;
            top: 0;
        }
        /* The dots/bullets/indicators */
        .dot {
            cursor: pointer;
            height: 15px;
            width: 15px;
            margin: 0 2px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            transition: background-color 1.5s ease;
        }

            .active, .dot:hover {
                background-color: #717171;
            }
        /* Fading animation */
        .fade {
            -webkit-animation-name: fade;
            -webkit-animation-duration: 3.5s;
            animation-name: fade;
            animation-duration: 3.5s;
        }

        @@-webkit-keyframes fade {
            from {
                opacity: .4
            }

            to {
                opacity: 1
            }
        }

        @@keyframes fade {
            from {
                opacity: .4
            }

            to {
                opacity: 1
            }
        }
    </style>
</head>
<body>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole(TBashaBari.WebConstant.OwnerRole))
    {
        <!--:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::-->
        <!--::::::::::::::::::::::::::::::         Owner        :::::::::::::::::::::::::::::::::-->
        <!--:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::-->
        <div class="container p-3 justify-content-between">
            <h3 class="text-primary font-weight-bold mb-5">Welcome @GetUserFullName(UserManager.GetUserName(User))!</h3>
            <br />
            <!--::::::::::::::::::::::::::::::::::::::       Row      ::::::::::::::::::::::::::::::::::::::::::::::::-->
            <div class="row">
                <!--::::::::::::::::::::::::::::::::::::::       Col      ::::::::::::::::::::::::::::::::::::::::::::::::-->
                <div class="col-sm-7 px-5">
                    <h5 class="text-primary font-weight-bold">Recent Notices</h5>
                    @{
                        if (Model.Notice.Count != 0)
                        {
                            <div class="overflow-auto" style="max-width: 1000px; max-height: 250px;">
                                @foreach (var obj in Model.Notice)
                                {
                                    <div class="card m-3" style="background-color: gainsboro">
                                        <div class="row no-gutters">
                                            <div class="col-sm-10">
                                                <div class="card-body">
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <p class="font-weight-bold">@GetUserFullName(UserManager.GetUserName(User)) </p>
                                                        <small>@obj.NoticeTime</small>
                                                    </div>
                                                    <small>@obj.NoticeText</small>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <h5 class="p-4">You haven't posted any notice yet.</h5>
                        }
                    }
                    <a asp-controller="OwnerNotice" asp-action="Index" class="btn btn-primary px-3 m-3">
                        View More
                    </a>
                    <br />  <br />
                </div>
                <!--::::::::::::::::::::::::::::::::::::::       Col      ::::::::::::::::::::::::::::::::::::::::::::::::-->
                <div class="col-sm-5 px-5">
                    <h5 class="text-primary font-weight-bold">Pending Tenant</h5>
                    @{
                        if (Model.Connect.Count != 0)
                        {
                            <div class="overflow-auto" style="max-width: 1000px; max-height: 250px;">
                                @foreach (var obj in Model.Connect)
                                {
                                    <div class="card m-3" style="background-color: gainsboro">
                                        <div class="row no-gutters">
                                            <div class="col-sm-10">
                                                <div class="card-body">
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <p class="font-weight-bold">[Pending] @GetUserFullName(obj.TenantEmail) </p>
                                                    </div>
                                                    <small>@obj.TenantEmail</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <h5 class="p-4">You are not connected to any Tenants</h5>
                        }
                    }
                    <a asp-controller="OwnerViewsConnectedList" asp-action="Index" class="btn btn-primary px-3 m-3">
                        See All
                    </a>
                    <br />  <br />
                </div>
            </div>

            <!--::::::::::::::::::::::::::::::::::::::       Row      ::::::::::::::::::::::::::::::::::::::::::::::::-->
            <div class="row">
                <!--::::::::::::::::::::::::::::::::::::::       Col      ::::::::::::::::::::::::::::::::::::::::::::::::-->
                <div class="col-sm-5 px-5">
                    <h5 class="text-primary font-weight-bold">Recent Bill</h5>
                    @{
                        if (Model.Bill.Count != 0)
                        {
                            <div class="overflow-auto" style="max-width: 1000px; max-height: 250px;">
                                @foreach (var obj in Model.Bill)
                                {
                                    <div class="card m-3" style="background-color: gainsboro">
                                        <div class="row no-gutters">
                                            <div class="col-sm-10">
                                                <div class="card-body">
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <p class="font-weight-bold">@GetUserFullName(obj.TenantEmail) </p>
                                                        <small>@obj.BillTime</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <h5 class="p-4">You haven't posted any bills yet.</h5>
                        }
                    }
                    <a asp-controller="OwnerViewsBill" asp-action="Index" class="btn btn-primary px-3 m-3">
                        See All
                    </a>
                    <br />  <br />
                </div>
                <!--::::::::::::::::::::::::::::::::::::::       Col      ::::::::::::::::::::::::::::::::::::::::::::::::-->
                <div class="col-sm-7 px-5">
                    <h5 class="text-primary font-weight-bold">Recent Requests</h5>
                    @{
                        if (Model.Request.Count != 0)
                        {
                            <div class="overflow-auto" style="max-width: 1000px; max-height: 250px;">
                                @foreach (var obj in Model.Request)
                                {
                                    <div class="card m-3" style="background-color: gainsboro">
                                        <div class="row no-gutters">
                                            <div class="col-sm-10">
                                                <div class="card-body">
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <p class="font-weight-bold">@GetUserFullName(obj.TenantEmail) </p>
                                                        <small>@obj.RequestTime</small>
                                                    </div>
                                                    <small>@obj.RequestText</small>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <h5 class="p-4">You are not connected to any Tenants</h5>
                        }
                    }
                    <a asp-controller="OwnerViewsRequest" asp-action="Index" class="btn btn-primary px-3 m-3">
                        View More
                    </a>
                    <br />  <br />
                </div>
            </div>
        </div>
    }
    else if (SignInManager.IsSignedIn(User) && User.IsInRole(TBashaBari.WebConstant.TenantRole))
    {
        <!--:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::-->
        <!--::::::::::::::::::::::::::::::        Tenant        :::::::::::::::::::::::::::::::::-->
        <!--:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::-->
        <p>processing</p>
    }
    else
    {
        <!--:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::-->
        <!--::::::::::::::::::::::::::::::        Default       :::::::::::::::::::::::::::::::::-->
        <!--:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::-->
        <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">

                <img src="/images/home/5.jpg" style="width:100%">
                <div class="text">Welcome To BashaBari</div>
            </div>

            <div class="mySlides fade">

                <img src="/images/home/6.jpg" style="width:100%">
                <div class="text">Easy Rent & Bill Track</div>
            </div>

            <div class="mySlides fade">

                <img src="/images/home/3.jpg" style="width:100%">
                <div class="text">Quick Notice For Tenant</div>
            </div>
            <div class="mySlides fade">

                <img src="/images/home/7.jpg" style="width:100%">
                <div class="text">Problem Solve Related Requent From Tenant</div>
            </div>
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>
        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
            <span class="dot" onclick="currentSlide(4)"></span>
        </div>
    }

    <script>
        var slideIndex = 0;
        showSlides();

        function showSlides() {
            var i;
            var slides = document.getElementsByClassName("mySlides");
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            slideIndex++;
            if (slideIndex > slides.length) { slideIndex = 1 }
            slides[slideIndex - 1].style.display = "block";
            setTimeout(showSlides, 3500); // Change image every 2 seconds
        }
    </script>
</body>

